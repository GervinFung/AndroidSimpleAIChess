        app:layout_constraintEnd_toEndOf="@+id/saveGameButton"/>

    <Button
        android:id="@+id/undoMoveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo Move"
        app:layout_constraintEnd_toEndOf="@+id/saveGameButton"

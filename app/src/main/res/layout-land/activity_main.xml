        android:id="@+id/saveGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Game"
        app:layout_constraintEnd_toEndOf="@+id/newGameButton"
        app:layout_constraintStart_toStartOf="@+id/newGameButton"
        app:layout_constraintTop_toBottomOf="@+id/newGameButton"
        app:layout_constraintBottom_toTopOf="@id/undoMoveButton"/>

    <Button
        android:id="@+id/resumeGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Game"
        app:layout_constraintEnd_toEndOf="@+id/undoMoveButton"
        app:layout_constraintStart_toStartOf="@+id/undoMoveButton"
        app:layout_constraintTop_toBottomOf="@+id/undoMoveButton"
        app:layout_constraintBottom_toTopOf="@+id/exitGameButton"/>

